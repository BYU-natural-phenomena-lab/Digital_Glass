<Window x:Class="Walle.MainWindow"
        x:Name="AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Walle.View"
        Title="Walle" Height="564" Width="792">
    <Window.Resources>
        <SolidColorBrush x:Key="MenuGray" Color="#FFF0F0F0"/>
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Button">
                <Border Name="border" Background="Transparent" BorderThickness="1" BorderBrush="Black">
                    <ContentPresenter/>
                </Border>

                <ControlTemplate.Triggers>
                    <Trigger Property="Button.IsPressed" Value="True">
                        <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>

			</Style>
    </Window.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="2"  BorderBrush="#FF959595" BorderThickness="0,0,0,1" Background="{DynamicResource MenuGray}">
            <Menu Background="{DynamicResource MenuGray}">
                <MenuItem Header="File">
                    <MenuItem x:Name="OpenFileCommand" Header="Open..." Click="OpenFileCommand_Click">
                        <MenuItem.Icon>
                            <Image Source="Resources/folder_Open_32xLG.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="CloseFileCommand" Header="Close" Click="CloseFileCommand_OnClick" />
                    <MenuItem x:Name="QuitCommand" Header="Exit" Click="QuitCommand_OnClick">
                        <MenuItem.Icon>
                            <Image Source="Resources/Close_16xLG.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </Border>
        <StackPanel x:Name="StatusBar" DockPanel.Dock="Bottom"  Background="{DynamicResource MenuGray}" Orientation="Horizontal">

            <Label Padding="2" Content="" x:Name="Coordinates" BorderThickness="0,0,1,0" />
        </StackPanel>
        <StackPanel Background="WhiteSmoke" DockPanel.Dock="Left">
            <Button Click="OpenFileCommand_Click">
                <Image Source="Resources/folder_Open_32xLG.png" Height="32" Width="32"></Image>
            </Button>
        </StackPanel>
        <DockPanel Background="Gray">
            <view:CanvasHost x:Name="MainCanvas" Visibility="Visible" Margin="20" MouseMove="MainImage_OnMouseMove" MouseLeave="MainImage_OnMouseLeave">
                <view:CanvasHost.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="30" Opacity="0.55" />
                </view:CanvasHost.Effect>
            </view:CanvasHost>
        </DockPanel>
    </DockPanel>
</Window>
